<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_marginHorizontal="16dp">

    <EditText
        android:id="@+id/local_banheiro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Local do Banheiro"
        android:layout_marginBottom="16dp"/>

    <RadioGroup
        android:id="@+id/tipo_banheiro_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:id="@+id/radio_publico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Público"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radio_privado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Privado" />

    </RadioGroup>

    <EditText
        android:id="@+id/preco_banheiro"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Preço para uso"
        android:inputType="numberDecimal"
        android:digits="0123456789.,"
        android:layout_marginTop="8dp"/>

    <CheckBox
        android:id="@+id/fraldario_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Fraldário"/>

</LinearLayout>